<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cachirulop.moneybox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".activity.MainTabWidget" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MoneyboxActivity"></activity>
        <activity android:name=".activity.MovementsActivity"></activity>
        <activity android:name=".activity.MovementDetailActivity"></activity>
        </application>

</manifest>
